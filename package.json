{
  "name": "uploader",
  "version": "1.0.0",
  "description": "Local file uploader with modern UI",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "bun build --target node ./src/server.ts --outdir ./dist",
    "start": "bun run src/server.ts",
    "start:node": "node dist/server.js",
    "dev": "bun --watch src/server.ts"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.4.4",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3"
  }
}
